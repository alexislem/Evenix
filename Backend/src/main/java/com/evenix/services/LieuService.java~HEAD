package com.evenix.services;

import java.util.List;
import java.util.Optional;

import org.springframework.stereotype.Service;

import com.evenix.dto.LieuDTO;

@Service
public interface LieuService {
    
    List<LieuDTO> getAllLieux();
    
    Optional<LieuDTO> getLieuById(int id);
    
    LieuDTO createLieu(LieuDTO dto);
    
    LieuDTO updateLieu(int id, LieuDTO dto);
    
    void deleteLieu(int id);
    
    List<LieuDTO> getLieuxByType(int typeLieuId);
    
    List<LieuDTO> getLieuxByCapacite(int minPlaces, int maxPlaces);
    
    List<LieuDTO> getLieuxInRadius(double latitude, double longitude, double radiusKm);
    
    boolean isLieuAvailable(int lieuId, int nbPersonnes);
}