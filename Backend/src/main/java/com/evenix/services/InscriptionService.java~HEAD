package com.evenix.services;

import java.time.ZonedDateTime;
import java.util.List;
import java.util.Optional;

import org.springframework.stereotype.Service;

import com.evenix.entities.Inscription;

@Service
public interface InscriptionService {
	    
	Inscription createInscription(int utilisateurId, int evenementId, ZonedDateTime dateInscription);
	    
	List<Inscription> getAllInscriptions();
	    
	Optional<Inscription> getInscriptionById(int id);
	    
	List<Inscription> getInscriptionsByUtilisateur(int utilisateurId);
	    
	List<Inscription> getInscriptionsByEvenement(int evenementId);
	    
	void deleteInscription(int id);
	    
	boolean isUserRegisteredForEvent(int utilisateurId, int evenementId);
}
