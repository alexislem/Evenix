package com.evenix.services;

import java.math.BigDecimal;
import java.time.LocalDateTime;
import java.util.List;
import java.util.Optional;

import org.springframework.stereotype.Service;

import com.evenix.dto.PaiementDTO;

@Service
public interface PaiementService {
    
    List<PaiementDTO> getAllPaiements();
    
    Optional<PaiementDTO> getPaiementById(int id);
    
    PaiementDTO createPaiement(PaiementDTO dto);
    
    PaiementDTO updatePaiement(int id, PaiementDTO dto);
    
    void deletePaiement(int id);
    
    List<PaiementDTO> getPaiementsByUtilisateur(int utilisateurId);
    
    List<PaiementDTO> getPaiementsByEvenement(int evenementId);
    
    List<PaiementDTO> getPaiementsByDateRange(LocalDateTime dateDebut, LocalDateTime dateFin);
    
    BigDecimal getTotalPaiementsByEvenement(int evenementId);
    
    BigDecimal getTotalPaiementsByUtilisateur(int utilisateurId);
    
    boolean hasPaidForEvent(int utilisateurId, int evenementId);
}
