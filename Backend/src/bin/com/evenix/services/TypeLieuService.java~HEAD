package com.evenix.services;

import com.evenix.dto.TypeLieuDTO;

import java.util.List;
import java.util.Optional;

import org.springframework.stereotype.Service;

@Service
public interface TypeLieuService {
	
    List<TypeLieuDTO> getAllTypeLieux();
    Optional<TypeLieuDTO> getTypeLieuById(int id);
    TypeLieuDTO createTypeLieu(TypeLieuDTO dto);
    Optional<TypeLieuDTO> updateTypeLieu(int id, TypeLieuDTO dto);
    boolean deleteTypeLieu(int id);
}

